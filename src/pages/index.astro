---
import "../styles/styles.css";

const details = [
  {
    title: "Followers",
    value: "80K",
  },
  {
    title: "Likes",
    value: "803K",
  },
  {
    title: "Photos",
    value: "1.4K",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <style>
      ._card {
        display: grid;
        grid-template-rows: 1.35fr 1.65fr 1fr;
      }

      p {
        text-align: center;
      }
    </style>
  </head>
  <body class="bg-brand-surface">
    <main class="mx-auto grid min-h-screen max-w-prose place-content-center">
      <div
        class="_card min-w-96 overflow-hidden rounded-lg bg-white shadow shadow-xl shadow-gray-500"
      >
        <div class="w-full bg-slate-300"></div>
        <div class="flex flex-col items-center justify-end">
          <p class="">Victor Crest <span>26</span></p>
          <p class="">London</p>
        </div>
        <ul
          class="flex flex-row items-center justify-evenly border-t border-r-0 border-b-0 border-l-0 border-t-gray-200 p-6"
        >
          {
            details.map((detail) => (
              <li>
                <p class="text-xl font-bold">{detail.value}</p>
                <p class="text-brand-text-2 text-xs tracking-widest">
                  {detail.title}
                </p>
              </li>
            ))
          }
        </ul>
      </div>
    </main>
  </body>
</html>
