---
import "../styles/styles.css";
const title = "Blog Preview Card Component | Frontend Mentor";
const description =
  "Blog Preview Card Component built with Astro and Tailwind CSS v4 alpha. Designed by Frontend Mentor.";

import imageAvatar from "@assets/bp-card/image-avatar.webp";
import illustrationArticle from "@assets/bp-card/illustration-article.svg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://res.cloudinary.com/dvivrw9ml/image/upload/f_auto,q_auto/og-banner-plain-no-tag_jh0wrb"
    />

    <meta name="twitter:site" content="@brianmpdotdev" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:image"
      content="https://res.cloudinary.com/dvivrw9ml/image/upload/f_auto,q_auto/og-banner-plain-no-tag_jh0wrb"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Figtree", sans-serif;
      }
    </style>
  </head>
  <body class="bg-bpcard-brand-surface">
    <main class="mx-auto grid h-screen place-content-center max-sm:w-11/12">
      <div
        class="bg-bpcard-brand-surface-2 relative flex aspect-[3/4] max-w-96 flex-col gap-4 rounded-2xl border border-black p-5"
      >
        <span
          class="absolute top-2 left-2 -z-10 block h-full w-full transform rounded-2xl bg-black"
        ></span>
        <div class="h-min overflow-hidden rounded-lg">
          <img
            src={illustrationArticle.src}
            alt=""
            class="top-0 left-0 w-full object-cover"
            width="350"
            height="215"
          />
        </div>

        <div class="flex grow flex-col justify-between">
          <div class="flex flex-col gap-2">
            <span
              class="text-bpcard-brand-text-1 bg-bpcard-brand-surface w-min rounded-md py-1 px-2 text-sm font-bold transition-transform hover:scale-110 hover:shadow-md"
            >
              Learning
            </span>
            <span class="text-bpcard-brand-text-1 text-sm">
              Published 10 Mar 2024
            </span>
          </div>
          <h2 class="text-bpcard-brand-text-1 text-2xl font-bold">
            HTML &amp; CSS foundations
          </h2>
          <p class="text-bpcard-brand-text-1 text-base">
            These languages are the backbone of every website. They define
            structure, content, and presentation.
          </p>
          <a href="#" class="w-fit">
            <div class="flex items-center gap-2">
              <img
                src={imageAvatar.src}
                alt=""
                class="h-8 w-8 rounded-full"
                width="32"
                height="32"
              />
              <span class="text-bpcard-brand-text-1 text-base font-bold">
                Greg Hooper
              </span>
            </div>
          </a>
        </div>
      </div>
    </main>
  </body>
</html>
